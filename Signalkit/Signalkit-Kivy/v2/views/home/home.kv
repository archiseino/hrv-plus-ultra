## Container for Camera and Graph

<Home>:
    padding: dp(14)
    spacing: dp(16)

    BoxLayout:
        orientation: 'vertical'
        Text:
            size_hint_y: 0.05
            text: "Phys-App"
            valign: "middle"
            halign: "left"

        BoxLayout:
            spacing: dp(10)
            
            ## Camera Section 
            AnchorLayout:
                anchor_y: 'top'
                size_hint_x: 0.4
                ShadowBox:
                    radius: [dp(8)] ## Rounded 16dp
                    elevation: 2
                    size_hint: 1, 0.7
                    padding: dp(16)
                    spacing: dp(8)
                    orientation: "vertical" 
                    BoxLayout:
                        size_hint_y: .1
                        orientation: 'horizontal'
                        AnchorLayout:
                            anchor_x: 'left'
                            anchor_y: 'center'
                            Text:
                                text: "Camera Feed"
                                font_name: app.fonts.body
                                font_size: app.fonts.size.h3
                                valign: "middle"
                                halign: "left"
                                color: app.colors.black
                        AnchorLayout:
                            anchor_x: 'right'
                            anchor_y: 'center'
                            IconButton:
                                size_hint: None, None
                                size: dp(16), dp(16)
                                source: app.resource_path('assets/icons/camera-solid.png')
                    
                    BoxLayout: 
                        size_hint_y: 0.5
                        CameraLayout:

                    BoxLayout:
                        size_hint_y: .1
                        orientation: 'horizontal'
                        AnchorLayout:
                            anchor_x: 'left'
                            anchor_y: 'center'
                            Text:
                                text: "Status Camera: On"
                                font_name: app.fonts.body
                                font_size: app.fonts.size.h5
                                color: app.colors.primary
                        AnchorLayout:
                            anchor_x: 'right'
                            anchor_y: 'center'
                            IconButton:
                                size_hint: None, None
                                size: dp(16), dp(16)
                                source: app.resource_path('assets/icons/circle-solid.png')
                    
                    
            ## Physiology Section
            AnchorLayout:
                anchor_y: 'top'
                size_hint_x: 0.6
                ShadowBox:
                    radius: [dp(16)] ## Rounded 16dp
                    elevation: 2
                    size_hint: 1, 1
                    padding: dp(16)
                    spacing: dp(8)
                    orientation: "vertical" 

                    BoxLayout:
                        size_hint_y: 0.2
                        orientation: 'horizontal'

                        AnchorLayout:
                            anchor_x: 'left'
                            anchor_y: 'center'
                            Text:
                                text: "Physiology Signals"
                                font_name: app.fonts.body
                                valign: "middle"
                                halign: "left"
                                font_size: app.fonts.size.h3
                                color: app.colors.black

                    BoxLayout:
                        size_hint_y: 0.6
                        padding: dp(10)
                        radius: [dp(8)] ## Rounded 16dp
                        MatplotFigure:
                            id: figure_hr


                    ## Physiology Status StatusIndicator
                    BoxLayout:
                        size_hint: 1, 0.4
                        padding: dp(8)
                        spacing: dp(8)
                        HrvBox:
                            id: hr_box
                            label: "Pulse Rate"
                            unit: "BPM"
                        
